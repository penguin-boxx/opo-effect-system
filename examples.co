data Unit = Unit

data Option<a> = None | Some(a)

data Result<e, a> = Error(e) | Ok(a)


data List<a> = Nil | Cons(a, List<a>)

fun cons<a <: Any'local>(): (a) -> (List<a>) -> List<a> =
    fun(x: a) fun(xs: List<a>) Cons<a>(x, xs)


data File = File

fun withFile<r>(f: (File'local) -> r): r =
    f(File())


// (f: (b) -> c, g: (a) -> b) -> (x: a)'f+g -> c
fun compose
    [la, lb, lc, lf, lg]
    <a <: Any'la, b <: Any'lb, c <: Any'lc>
    (f: (b)'lf -> c, g: (a)'lg -> b): (a)'lb+lf+lg -> c =
    fun(x : a) f(g(x))

let id = fun<a <: Any'local>(x: a) x

fun downcast<t>(x: t): t = x


effect Reader<e> {
    op ask(): e
}

fun withReader<e, r>(f: context(Reader<e>) ()'local -> r): (e) -> r =
    handle r: Reader<e> {
        op ask() fun(e: e) resume(e)(e)
    }
    let x: r = f() in
    fun(e: e) x

let readerExample =
    handle r: Reader<Int> {
        op ask() resume(42)
    }
    perform r.ask()

effect State<s> {
    op get(): s
    op put(s): Unit
}

fun withState
    [lr]<s <: Any'free, r <: Any'lr>
    (f: context(State<s>) ()'local -> r): (s) -> r =
    handle st: State<s> {
        op get() fun(s: s) resume(s)(s)
        op put(s) fun(old: s) resume(Unit())(s)
    }
    let x: r = f() in
    fun(s: s) x

