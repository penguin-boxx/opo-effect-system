effect Id {
    op id<a>(a): a
}

fun withId<r>(f: context(Id) () -> r): r =
    handle h: Id {
        op id(x) resume(x)
    }
    f()

effect Optionality {
    op mkSome<a>(a): Option<a>
}

let exampleOptionality =
    handle o: Optionality {
        op mkSome<b>(x) resume(Some<b>(x))
    }
    perform o.mkSome<Int>(42)
